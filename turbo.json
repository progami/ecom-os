{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NEXTAUTH_SECRET",
        "CENTRAL_AUTH_SECRET",
        "CENTRAL_AUTH_URL",
        "NEXTAUTH_URL",
        "COOKIE_DOMAIN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    }
  }
}

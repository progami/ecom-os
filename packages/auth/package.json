{
  "name": "@ecom-os/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "type-check": "tsc --noEmit -p tsconfig.build.json",
    "lint": "echo 'No lint configured for auth package'",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma db push --schema prisma/schema.prisma",
    "prisma:seed": "prisma db seed --schema prisma/schema.prisma",
    "prepare": "prisma generate --schema prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.0",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "prisma": "6.19.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "bcryptjs": "^3.0.2",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "next-auth": "^4.24.0",
    "next": ">=13",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  }
}

{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/jarraramjad/Documents/ecom_os"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_GITHUB_TOKEN>"
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres", "postgresql://username:password@localhost:5432/centraldb"]
    },
    "gdrive": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive"],
      "env": {
        "GDRIVE_CLIENT_ID": "<YOUR_CLIENT_ID>",
        "GDRIVE_CLIENT_SECRET": "<YOUR_CLIENT_SECRET>",
        "GDRIVE_REDIRECT_URI": "http://localhost:3000/oauth/callback"
      }
    }
  }
}
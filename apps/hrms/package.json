    "googleapis": "^131.0.0"
  },
  "devDependencies": {
    "@types/node": "24.3.3",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.9.2",
    "prisma": "^5.8.0",
    "tsx": "^4.20.4"

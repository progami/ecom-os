{
  "name": "@ecom-os/hrms",
  "version": "0.9.0",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "node ../../scripts/run-dev-with-logs.js hrms -- next dev -p 3006",
    "build": "next build",
    "start": "next start -p 3006",

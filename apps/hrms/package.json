{
  "name": "@ecom-os/hrms",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "node ../../scripts/run-dev-with-logs.js hrms -- next dev --webpack -p 3006",
    "build": "next build --webpack",
    "start": "next start -p 3006",
    "type-check": "DATABASE_URL=${DATABASE_URL:-postgresql://localhost:5432/hrms} prisma generate --schema prisma/schema.prisma && tsc --noEmit --skipLibCheck",
    "test": "cd tests && playwright test",
    "test:headed": "cd tests && playwright test --headed",
    "test:ui": "cd tests && playwright test --ui",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.943.0",
    "@aws-sdk/lib-storage": "^3.943.0",
    "@aws-sdk/s3-request-presigner": "^3.943.0",
    "@ecom-os/auth": "workspace:*",
    "@ecom-os/aws-s3": "workspace:*",
    "@ecom-os/prisma-hrms": "workspace:*",
    "clsx": "^2.1.1",
    "googleapis": "^168.0.0",
    "mime-types": "^3.0.1",
    "next": "16.0.8",
    "next-auth": "5.0.0-beta.30",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.6.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@prisma/client": "6.19.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.6",
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "prisma": "6.19.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}

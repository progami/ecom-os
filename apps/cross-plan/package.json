  "private": true,
  "scripts": {
    "dev": "next dev -p 3008",
    "build": "next build",
    "start": "next start -p 3008",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --check \"{app,components,lib,styles}/**/*.{ts,tsx,mdx}\"",
    "format:write": "prettier --write \"{app,components,lib,styles}/**/*.{ts,tsx,mdx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:push": "prisma db push --schema prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {

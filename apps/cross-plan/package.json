    "next": "^15.5.0",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.53.0",
    "server-only": "^0.0.1",
    "sonner": "^1.5.0",
